<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Choose entities to merge</h3>
    </div>
    <table class="table table-bordered">
        {% for entity in entities %}
            <tr>
                <td><input type="checkbox" name="selected[]" value="{{ entity.id }}"{% if entity.id in selected|keys %} checked="checked"{% endif %} /></td>
                <td>{{ entity.username }}</td>
            </tr>
        {% endfor %}
    </table>
</div>