{% extends 'EndroidDataSanitizeBundle::layout.html.twig' %}

{% block page_content %}

    <div class="row">
        <form method="get" onchange="this.submit();">
            <div class="col-md-4">
                {{ render(controller('EndroidDataSanitizeBundle:Merge:list', { name: name, entities: entities, selected: selected })) }}
            </div>
            <div class="col-md-4">
                {{ render(controller('EndroidDataSanitizeBundle:Merge:selected', { name: name, selected: selected, target: target })) }}
            </div>
            <div class="col-md-4">
                {{ render(controller('EndroidDataSanitizeBundle:Merge:target', { name: name, target: target })) }}
            </div>
        </form>
    </div>

{% endblock %}