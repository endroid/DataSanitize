{% extends 'EndroidDataSanitizeBundle::layout.html.twig' %}

{% block page_title %}
    Merge entities
{% endblock %}

{% block page_subtitle %}
    Replace all occurrences with target entity
{% endblock %}

{% block page_content %}

    <div class="row">
        <form method="get" onchange="this.submit();">
            <div class="col-md-4">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Select entities to merge</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            {% for entity in entities %}
                                <tr>
                                    <td width="20px"><input type="checkbox" name="selected[]" value="{{ entity.id }}"{% if entity.id in selected|keys %} checked="checked"{% endif %} /></td>
                                    {% for field in listFields %}
                                        <td>{{ attribute(entity, field) }}</td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Choose target entity</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            {% for entity in selected %}
                                <tr>
                                    <td width="20px"><input type="radio" name="target" value="{{ entity.id }}"{% if target is not empty and entity.id == target.id %} checked="checked"{% endif %} /></td>
                                    {% for field in listFields %}
                                        <td>{{ attribute(entity, field) }}</td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </form>
        <form method="post">
            <div class="col-md-4">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit data</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            {% if target is not empty %}
                                <tr>
                                    <td><strong>id</strong></td>
                                    <td width="100%">{{ target.id }}</td>
                                </tr>
                                {% for field in editFields %}
                                    <tr>
                                        <td><strong>{{ field }}</strong></td>
                                        <td width="100%">{{ attribute(target, field) }}</td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td></td>
                                    <td><input type="submit" value="Merge" /></td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>

{% endblock %}